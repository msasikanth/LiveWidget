<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/content_view_widget"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_event_title_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                tools:text="@string/title"
                android:textSize="20sp"
                android:textColor="?android:attr/textColorPrimary"/>

        <TextView
                android:id="@+id/tv_event_desc_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp"
                tools:text="@string/desc"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_event_start_widget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="0dp"
                    tools:text="Start Date : 20 Jan 2017, 12:00 AM IST"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"/>

            <TextView
                    android:id="@+id/tv_event_end_widget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    tools:text="End Date : 26 Mar 2017, 11:59 PM IST"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"/>


        </LinearLayout>


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

            <TextView
                    android:id="@+id/tv_event_status_widget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    tools:text="STATUS : ONGOING"
                    android:layout_alignParentStart="true"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"/>


        </RelativeLayout>

    </LinearLayout>


</FrameLayout>